<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
 
<h2>Comments</h2>
<%= render @post.comments %>
 
<h2>Add a comment:</h2>
<%= render "comments/form" %>
 
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>

<br>
<h3>Tags</h3>
<ul>
<% @tags.each do |tag| %>
  <li><% link_to tag.name, { action: 'add_tag', tag_id: tag.id }, { method: :post }%></li>
<% end%>
</ul>